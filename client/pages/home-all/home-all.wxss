}
.imgCol{
  display: flex;
  align-items: center;
  justify-content: center;
  }
.outer{
  color:#000000;
  margin-bottom:60rpx
}
.dropDown{
  position:absolute;
  background:black;
  width:152rpx;
  height:106rpx;
  margin-left:75rpx;
}
.arrow,.activeArrow{
  position:absolute;
  top: 32%;
  right: 22%;
  width:30rpx;
  height: 30rpx;
}
.activeArrow{
  transform: rotate(90deg);
}
.out2{
  margin: 0 0 50rpx 0;
}
.out1{
  margin-bottom:30rpx;
  position: relative;
}
.out1:before{
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  background-color: var(--black);
  opacity: .7!important;
}

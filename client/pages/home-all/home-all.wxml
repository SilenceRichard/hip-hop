<view class="out">
    <view class="box" >
        <view class="cu-bar search bg-white" style="background: var(--gradualBlack)">
            <view class="search-form round">
                <text class="cuIcon-search"></text>
                <input type="text" placeholder="搜索关键字" confirm-type="search" bindtap="../home-searchInfo"></input>
            </view>
            <view class="action">
                <text>广州</text>
                <text class="cuIcon-triangledownfill"></text>
            </view>
        </view>
    </view>


    <view class="row header">
        <view class='col'  style="position: relative">
            <image class="{{dropDownFlag?'activeArrow':'arrow'}}"  src="../../static/icon/arrow-right.svg"></image>
            <block wx:for='{{list}}' wx:key="item.name">
                <view class="{{item.flag?'col-4 list list-active':'col-4 list'}}" bindtap="activeList" data-item="{{item}}">
                    {{item.name}}
                </view>
            </block>
        </view>
      <!--        层级不够，要把dropdown层级置于page上面-->
        <view class="dropDown"  wx:if="{{dropDownFlag}}"style="z-index:9999" >
            <view class="title" bindtap="activeDropDown1">按时间 ↑</view>
            <view class="title" bindtap="activeDropDown2">按距离 ↑</view>
        </view>
    </view>


    <block wx:for="{{info}}">
        <view class='row outer' bindtap="goToDetail" data-item="{{item}}" >
            <view class='col' style='height:100%'>
                <view class='col-4'><image class="listImage" src="{{item.cover}}"></image></view>
                <view class='col-8'>
                    <text class="title" >{{item.title}}</text>
                    <view class="col class1"  >
                        <view class='col-10' >{{item.str}}·{{item.type}}</view>
                        <view class='col-2' >{{item.limit}}</view>
                    </view>
                    <view class="innerText" style="color:#808080">{{item.time}}</view>
                    <view class="innerText" style="color:#808080">{{item.location}}</view>
                </view>
            </view>
        </view>
    </block>
</view>






<!--pages/home-all/home-all.wxml-->


<view id="out">
   <view class="searchbar-box">
      <view class="row searchbar">
          <view class="col">
              <view class="col-1 " style="padding:15rpx 0 0 5rpx">
                  <image class="search-img"  src="../../static/icon/search.png"></image>
              </view>
              <view class="col-11 ">
                  <input class="search-input">搜索关键字</input>
              </view>
          </view>
      </view>
</view>

    <view class="row header">
        <view class='col'  style="position: relative">
            <image class="arrow"  src="../../static/icon/arrow-down.png"></image>
         <block wx:for='{{list}}' wx:key="item.name">
             <view class="{{item.flag?'col-4 list list-active':'col-4 list'}}" bindtap="activeList" data-item="{{item}}">
                 {{item.name}}
             </view>
         </block>
        </view>
        <view class="dropDown" wx:if="{{dropDownFlag}}" >
            <view class="title" bindtap="activeDropDown1">按时间 ↑</view>
            <view class="title" bindtap="activeDropDown2">按距离 ↑</view>
        </view>
    </view>


    <block wx:for="{{info}}">
        <view class='row outer' >
            <view class='col' style='height:100%'>
                <view class='col-4'><image class="listImage" src="{{item.imgsrc}}"></image></view>
                <view class='col-8'>
                    <text class="title" >{{item.title}}</text>
                    <view class="col class1"  >
                        <view class='col-10' >{{item.innerText1}}·{{item.innerText2}}</view>
                        <view class='col-2' >{{item.limit_now}}/{{item.limit}}</view>
                    </view>
                    <view class="innerText" style="color:#808080">{{item.time}}</view>
                    <view class="innerText" style="color:#808080">{{item.location}}</view>
                </view>
            </view>
        </view>
    </block>
</view>






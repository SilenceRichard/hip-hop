<view id="out">
  <block wx:for="{{info}}">
    <view  class='row outer'bindtap="toAppointInfo" >
      <view class='col' style='height:100%'>
        <view class='col-3'><image src="{{item.imgsrc}}" ></image></view>
          <view class='col-9'>
            <text class="title">{{title}}</text>
              <view class="col outerText" style='color:#505050'>
              <view class='col-11 innerText1'>{{item.innerText1}}</view>
              <view class='col-1'>{{item.time}}</view>
              </view>
              <view class="innerText" style='color:#505050'>{{item.innerText2}}</view>
        </view>
      </view>       
    </view>
  </block>
</view>
<view class="row bg-gradual-black">
    <view class="col head" style="background-image: var(--gradualBlack)">
        <image bindtap="changeImage" src="{{userInfo.avatarUrl?userInfo.avatarUrl:'../../static/user status.png'}}"></image>
    </view>
</view>

<view>
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

    <view class="cu-form-group">
      <view class="title">昵称</view>
      <input value="{{userInfo.nickName}}" bindinput="changeInputVal" data-type="nickName" type="text"></input>
	  </view>

    <view class="cu-form-group">
      <view class="title">性别</view>
      <picker mode="selector" value="{{userInfo.gender}}" range="{{genterarray}}" bindchange="changeSex">
        <view class="picker">
          {{genterarray[userInfo.gender]}}
        </view>
      </picker>
	  </view>

    <view class="cu-form-group">
      <view class="title">生日</view>
      <picker mode="date" value="{{userInfo.birthday}}" bindchange="bindDateChange">
        <view class="picker">
          {{userInfo.birthday}}
        </view>
      </picker>
	  </view>

    <view class="cu-form-group">
		<view class="title">地址</view>
		<picker mode="region" bindchange="regionChange" value="{{userInfo.region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{userInfo.region[0]}}，{{userInfo.region[1]}}，{{userInfo.region[2]}}
			</view>
		</picker>
	</view>

  <view class="cu-form-group">
    <view class="title">身份</view>
    <picker mode="selector" value="{{userInfo.role}}" range="{{identyarray}}" bindchange="changeRole">
      <view class="picker">
        {{userInfo.role}}
      </view>
    </picker>
	</view>

  <view class="cu-form-group" bindtap="showModal">
    <view class="title">舞种</view>
    <view text-align="left">
      <view class="picker" wx:for="{{userInfo.danceType}}" wx:key="{{item.value}}" wx:if="{{item.checked==true}}" display="inline">
        {{item.value}}
      </view>
    </view>
	</view>

  <view class="cu-form-group" bindtap="chooseDanceAge">
    <view class="title">舞龄</view>
    <picker mode="selector" value="{{userInfo.danceAge}}" range="{{agearray}}">
      <view class="picker">
        {{userInfo.danceAge}}
      </view>
    </picker>
	</view>

    <view class="row form">
        <view class="col">
            <view class="col-3 label">个人介绍</view>
            <view class="col-8 formItem">
                <textarea placeholder="介绍一下你自己吧~" bindinput="changeIntroduction" value="{{userInfo.introduction}}" data-type="introduction">
                </textarea>
            </view>
        </view>
    </view>

    <view class="row form">
        <button style="width:80%" class="weui-btn" bindtap="saveUserInfo">确定</button>
    </view>

</view>



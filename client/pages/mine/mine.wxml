<!--pages/mine/mine.wxml-->
  <view class="header row">
    <view class="col" style="height: 100%">
      <view class="col-4">
        <image id="head" src="{{userInfo.avatarUrl}}" bindtap="toMineInfo"></image>
      </view>
      <view class="col-8">
         <view id="nickName">{{userInfo.nickName}}<image src="../../static/icon/edit.png"></image></view>
         <view id="sex">
           <image wx:if="{{userInfo.gender == 0}}" src="../../static/icon/girl.png"></image>
           <text wx:if="{{userInfo.gender == 0}}">保密</text>
           <image wx:if="{{userInfo.gender == 1}}" src="../../static/icon/boy.png"></image>
           <text wx:if="{{userInfo.gender == 1}}">男生</text>
           <image wx:if="{{userInfo.gender == 2}}" src="../../static/icon/girl.png"></image>
           <text wx:if="{{userInfo.gender == 2}}">女生</text>
         </view>
         <view id="sign">{{sign}}</view>
      </view>
    </view>
  </view>
  <view style="width: 100%" class="row">
    <list  title="我的约局" text="查看约局" icon="../../static/icon/spiderMan.png" url="../mine-yueju/mine-yueju">
    </list>
    <list  title="系统通知" text="查看通知" icon="../../static/icon/NickFury.png" url="../mine-yueju/mine-yueju">
    </list>
  </view>

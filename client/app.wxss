/**app.wxss**/
@import './style/weui.wxss';
@import './style/global.wxss';
@import './style/main.wxss';
@import './style/icon.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page{
  width: 100%;
  height: 100%;
  position: relative;
  background: var(--gradualBlack);
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
page:before{
  content:"";
  width: 100%;
  height: 100%;
  background: inherit linear-gradient(hsla(0,0%,100%,.2),transparent);
  opacity: .1;
  position: absolute;
  display: block;
    z-index: -1;
}
.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft{
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}
